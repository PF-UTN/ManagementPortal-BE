{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": false,
    "noEmit": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "paths": {
      "@mp/repository": [
        "libs/repository/src"
      ],
      "@mp/common/dtos": [
        "libs/common/src/dtos"
      ],
      "@mp/common/constants": [
        "libs/common/src/constants"
      ],
      "@mp/common/models": [
        "libs/common/src/models"
      ],
      "@mp/common/services": [
        "libs/common/src/services"
      ],
      "@mp/common/guards": [
        "libs/common/src/guards"
      ],
      "@mp/common/decorators": [
        "libs/common/src/decorators"
      ],
      "@mp/common/testing": [
        "libs/common/src/testing"
      ],
      "@mp/common/helpers": [
        "libs/common/src/helpers"
      ],
    }
  }
}