{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@mp/repository": "<rootDir>/../libs/repository/src",
    "@mp/repository/(.*)": "<rootDir>/../libs/repository/src/$1",
    "@mp/common/dtos": 
      "<rootDir>/../libs/common/src/dtos",
    "@mp/common/constants": "<rootDir>/../libs/common/src/constants",
    "@mp/common/domain": "<rootDir>/../libs/common/src/domain",    
    "@mp/common/guards": "<rootDir>/../libs/common/src/guards", 
    "@mp/common/decorators": "<rootDir>/../libs/common/src/decorators",
    "@mp/common/testing": "<rootDir>/../libs/common/src/testing"
  }
}